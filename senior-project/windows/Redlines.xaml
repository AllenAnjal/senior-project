<Window
    x:Class="senior_project.Redlines"
    x:Name="RedlinesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:senior_project"
    mc:Ignorable="d"
    Title="Redlines"
    Background="#FF858181"
    WindowStartupLocation="CenterScreen"
    Closed="Window_Closed"
    Icon="../images/splashscreen.png"
    Loaded="Window_Loaded"
    FontSize="16"
    HorizontalContentAlignment="Stretch"
    VerticalContentAlignment="Stretch"
    SizeToContent="Width"
    d:DesignWidth="599"
    d:DesignHeight="361"
    MinHeight="360"
    MinWidth="600">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem
                Header="Exit"
                Click="Exit_button_Click" />
        </ContextMenu>
    </Window.ContextMenu>
    <Viewbox Width="Auto" Height="Auto">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="325*" />
                <ColumnDefinition
                    Width="127*" />
            </Grid.ColumnDefinitions>

            <Border
                x:Name="SectionBorder"
                BorderBrush="Black"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="240"
                Margin="71,235,0,0"
                VerticalAlignment="Top"
                Width="714" />

            <Border
                x:Name="StepBorder"
                BorderBrush="Black"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="240"
                Margin="51,235,0,0"
                VerticalAlignment="Top"
                Width="714"
                Grid.Column="1" />

            <Button
                x:Name="btn_accept"
                Content="Accept"
                BorderThickness="0"
                Margin="480,885,152,25"
                MinHeight="30"
                MinWidth="30"
                Padding="5"
                FontSize="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontWeight="SemiBold"
                FontStretch="ExtraExpanded"
                ClipToBounds="True"
                SnapsToDevicePixels="True"
                Background="#FFDDDDDD"
                Click="btn_accept_Click" />
            <Button
                x:Name="btn_reject"
                Content="Reject"
                Margin="51,885,585,25"
                MinHeight="30"
                MinWidth="30"
                Padding="5"
                Grid.Column="1"
                FontSize="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontWeight="SemiBold"
                FontStretch="ExtraExpanded"
                ClipToBounds="True"
                SnapsToDevicePixels="True"
                Background="#FFDDDDDD"
                Click="btn_reject_Click" />
            <Button
                x:Name="btn_accept_all"
                Content="Accept All"
                Margin="71,885,561,25"
                MinHeight="30"
                MinWidth="30"
                Padding="5"
                FontSize="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontWeight="SemiBold"
                FontStretch="ExtraExpanded"
                ClipToBounds="True"
                SnapsToDevicePixels="True"
                Background="#FFDDDDDD"
                Click="btn_accept_all_Click" />
            <Button
                x:Name="btn_reject_all"
                Content="Reject All"
                Margin="533,885,103,25"
                MinHeight="30"
                MinWidth="30"
                Padding="5"
                Grid.Column="1"
                FontSize="36"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontWeight="SemiBold"
                FontStretch="ExtraExpanded"
                ClipToBounds="True"
                SnapsToDevicePixels="True"
                Background="#FFDDDDDD"
                Click="btn_reject_all_Click" />

            <GroupBox
                x:Name="groupBoxOld"
                Header="Current"
                HorizontalAlignment="Left"
                Height="349"
                VerticalAlignment="Bottom"
                Width="840"
                Margin="10,0,0,148"
                FontSize="36">
                <TextBlock
                    x:Name="CurrentTextBlock"
                    HorizontalAlignment="Left"
                    Height="294"
                    Margin="10,3,-2,-1"
                    TextWrapping="Wrap"
                    Text="TextBlock"
                    VerticalAlignment="Top"
                    Background="White"
                    FontSize="36"
                    Width="825" />
            </GroupBox>
            <GroupBox
                x:Name="groupBoxNew"
                Header="Suggested"
                Margin="0,515,10,148"
                HorizontalAlignment="Right"
                Width="845"
                Grid.Column="1"
                FontSize="36">
                <TextBlock
                    x:Name="SuggestedTextBlock"
                    HorizontalAlignment="Left"
                    Height="294"
                    Margin="10,0,-2,0"
                    TextWrapping="Wrap"
                    Text="TextBlock"
                    VerticalAlignment="Top"
                    Background="White"
                    FontSize="36"
                    Width="825" />
            </GroupBox>
            <Label
                x:Name="LblActionToTake"
                Content="Action To Take:"
                HorizontalAlignment="Left"
                Margin="103,123,0,0"
                VerticalAlignment="Top"
                Height="78"
                Width="323"
                FontSize="48" />
            <Label
                x:Name="LblFromSection"
                Content="From Section:"
                HorizontalAlignment="Left"
                Margin="103,258,0,0"
                VerticalAlignment="Top"
                FontSize="48" />
            <Label
                x:Name="LblToSection"
                Content="To Section:"
                HorizontalAlignment="Left"
                Margin="103,364,0,0"
                VerticalAlignment="Top"
                FontSize="48" />
            <Label
                x:Name="LblFromStep"
                Content="From Step:"
                HorizontalAlignment="Left"
                Margin="71,258,0,0"
                VerticalAlignment="Top"
                FontSize="48"
                Grid.Column="2" />
            <Label
                x:Name="LblToStep"
                Content="To Step:"
                HorizontalAlignment="Left"
                Margin="71,347,0,0"
                VerticalAlignment="Top"
                FontSize="48"
                Grid.Column="2" />
            <Label
                x:Name="FromSection"
                Content="From Section"
                HorizontalAlignment="Left"
                Margin="426,258,0,0"
                VerticalAlignment="Top"
                FontSize="48"
                Background="White" />
            <Label
                x:Name="ToSection"
                Content="To Section"
                HorizontalAlignment="Left"
                Margin="426,364,0,0"
                VerticalAlignment="Top"
                FontSize="48"
                Background="White" />
            <Label
                x:Name="FromStep"
                Content="From Step"
                HorizontalAlignment="Left"
                Margin="384,258,0,0"
                VerticalAlignment="Top"
                Grid.Column="2"
                FontSize="48"
                Background="White" />
            <Label
                x:Name="ActionToTake"
                Content="ActionToTake"
                Margin="426,123,0,0"
                RenderTransformOrigin="0.53,-0.232"
                FontSize="48"
                Background="White"
                Grid.ColumnSpan="2"
                VerticalAlignment="Top"
                HorizontalAlignment="Left" />
            <Label
                x:Name="ToStep"
                Content="To Step"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Margin="384,347,0,0"
                VerticalAlignment="Top"
                FontSize="48"
                Background="White"
                RenderTransformOrigin="0.97,0.824" />

            <Label
                x:Name="title"
                Content="Proposed Redline"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Height="126"
                Width="1060"
                Margin="568,0,180,0"
                FontSize="72"
                FontWeight="Bold"
                TextOptions.TextHintingMode="Animated"
                FontStretch="Expanded"
                FontStyle="Normal"
                Grid.ColumnSpan="2" />

        </Grid>
    </Viewbox>
</Window>