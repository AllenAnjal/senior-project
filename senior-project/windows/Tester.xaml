<Window
    x:Class="senior_project.Tester"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:senior_project"
    mc:Ignorable="d"
    Title="Tester"
    Height="600"
    Width="800"
    Closed="Window_Closed">
    <Viewbox
        Stretch="Fill"  Height="auto">
        <Grid
            Height="auto"
            Width="auto"
            Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="88.313"/>
                <RowDefinition Height="11.687"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition
                    Width="61" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding TimeElapsed}" VerticalAlignment="Top"  HorizontalAlignment="Right" Grid.Column="1" FontSize="4" Margin="0,0,3,0"/>
            <TreeView
                x:Name="treeView1"
                IsEnabled="True"
                Background="#025dba"
                Height="Auto"
                Width="40"
                Visibility="Hidden"
                Opacity=".5"
                PreviewMouseLeftButtonUp="TreeView1_PreviewMouseLeftButtonUp_1"
                SelectedItemChanged="TreeView1_SelectedItemChanged"
                Grid.Column="0" Margin="0,0,0,0" Grid.RowSpan="2"
                ></TreeView>
            <Button Height="10" Name="tocButton" Command="{Binding showTOC}" CommandParameter="{Binding ElementName=buttonImage, Path=Source}">
                <Image Name="buttonImage">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding isToggle}" Value="True">
                                    <Setter Property="Source" Value="icons\arrow-91-512.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding isToggle}" Value="False">
                                    <Setter Property="Source" Value="icons\arrow-27-512.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>
            <Button Name="passButton" 
                Width="11" Height="13" 
                Margin="0,0,0,-1"
                Click="PassButton_Click"
                ToolTip="Pass Step" 
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Grid.Row="1"
                BorderThickness="0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Grid.Column="1">
                <Image Source="icons\checked-checkbox-512.png" RenderTransformOrigin="0.498,0.389"></Image>
            </Button>
            <Button Name="failButton" 
                Width="11" Height="13" 
                Margin="0,0,11,-10"
                Click="FailButton_Click"
                ToolTip="Fail Step" 
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Grid.Row="1"
                BorderThickness="0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Grid.Column="1">
                <Image Source="icons\x-mark-5-512.png" RenderTransformOrigin="0.498,0.389"></Image>
            </Button>
            <Button Name="redlineButton" 
                Width="11" Height="13" 
                Margin="0,0,23,-1"
                Click="RedlineButton_Click"
                ToolTip="Suggest a redline" 
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Grid.Row="1"
                BorderThickness="0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Grid.Column="1">
                <Image Source="icons\edit-6-512.png" RenderTransformOrigin="0.498,0.389"></Image>
            </Button>
            <Button Name="commentButton" 
                Width="11" Height="13" 
                Margin="0,0,33,-1"
                Click="CommentButton_Click"
                ToolTip="Leave a comment" 
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Grid.Row="1"
                BorderThickness="0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Grid.Column="1">
                <Image Source="icons\comments-512.png" ></Image>
            </Button>
        </Grid> 
    </Viewbox>
</Window>
    