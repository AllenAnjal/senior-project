<Window
    x:Class="senior_project.Tester"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:senior_project"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Icon="icons\splashscreen.png"
    mc:Ignorable="d"
    Title="Tester"
    Height="600"
    Width="800"
    Closed="Window_Closed">
    <Viewbox
        Stretch="Fill">
        <Viewbox.ContextMenu>
            <ContextMenu>
                <MenuItem
                    Header="Exit"
                    Click="Exit_Button" />
            </ContextMenu>
        </Viewbox.ContextMenu>
        <Grid
            Height="421"
            Width="786"
            
            Background="white">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="241*" />
                <ColumnDefinition
                    Width="0*" />
                <ColumnDefinition
                    Width="532*" />
            </Grid.ColumnDefinitions>
            <TreeView
                x:Name="treeView1"
                IsEnabled="True"
                Background="#025dba"
                Opacity=".5"
                Height="421"
                VerticalAlignment="Bottom"
                FontSize="22"
                PreviewMouseLeftButtonUp="TreeView1_PreviewMouseLeftButtonUp_1"
                SelectedItemChanged="TreeView1_SelectedItemChanged" />
            <Viewbox
                x:Name="buttonGrid"
                Grid.Column="2"
                Margin="0,0,-1,5"
                StretchDirection="Both"
                VerticalAlignment="Bottom"
                Stretch="Fill" Height="0" />
            <Button
                x:Name="passButton"
                ToolTip="Press to pass step"
                Click="PassButton_Click"
                Grid.Column="2" Margin="404,366,83,10"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Height="45" Width="45">
                <Image Source="icons\checked-checkbox-512.png" ></Image>
            </Button>
            <Button
                x:Name="failButton"
                ToolTip="Press to fail step and leave comment"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                
                Click="FailButton_Click"
                Grid.Column="2" Margin="468,366,18,10" Height="45" Width="46"
                >
                <Image Source="icons\x-mark-5-512.png" ></Image>
            </Button>
            <Button
                x:Name="redlineButton"
                ToolTip="Leave a redline suggestion"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="67"
                Grid.Column="2"
                Margin="329,366,0,0"
                Height="45"
                Click="RedlineButton_Click"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <Image Source="icons\edit-6-512.png"/>
            </Button>
            <Button
                x:Name="commentButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="65"
                ToolTip="Leave a comment"
                Grid.Column="2"
                Margin="264,366,0,0"
                Click="CommentButton_Click"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Height="45">
                <Image Source="icons\comments-512.png" ></Image>
            </Button>
            <Label
                x:Name="step"
                Content="Step"
                Grid.Column="2"
                Background="#025dba"
                Height="30"
                VerticalAlignment="Top"
                TextElement.Foreground="White"
                BorderBrush="Black"
                BorderThickness="1"
             />
            <Label
                x:Name="station"
                Content="Station"
                BorderBrush="Black"
                BorderThickness="1"
                Grid.Column="2"
                Background="#025dba"
                Height="30"
                VerticalAlignment="Top"
                TextElement.Foreground="White" Margin="0,77,0,0"
                
             />
            <Label
                    x:Name="control_action"
                    Content="Control Action"
                    Background="#025dba"
                    Height="30"
                    VerticalAlignment="Top"
                    TextElement.Foreground="White" Margin="0,160,0,0" Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="1"
             />
            <Label
                x:Name="expected_result"
                Content="Expected Result"
                Background="#025dba"
                Height="30"
                BorderBrush="Black"
                BorderThickness="1"
                VerticalAlignment="Top"
                TextElement.Foreground="White" Margin="0,247,0,0" Grid.Column="2"
             />
            <TextBox
                 x:Name="stepBox"
                 Height="47"
                Grid.Column="2"
                VerticalAlignment="Top"
                IsReadOnly="True"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center" Margin="0,30,-1,0"
                BorderBrush="Black"
               TextWrapping="Wrap"
                 />
            <TextBox
                x:Name="stationBox"
                Height="52"
                Grid.Column="2"
                VerticalAlignment="Top"
                IsReadOnly="True"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center" Margin="0,108,-1,0"
                BorderBrush="Black"
               TextWrapping="Wrap"
                 />
            <TextBox
                x:Name="controlActionBox"
                Height="57"
                Grid.Column="2"
                VerticalAlignment="Top"
                IsReadOnly="True"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center" Margin="0,190,-1,0"
                BorderBrush="Black"
               TextWrapping="Wrap"
                 />
            <TextBox
                x:Name="expectedResultBox"
                Height="72"
                Grid.Column="2"
                VerticalAlignment="Top"
                IsReadOnly="True"
                TextWrapping="Wrap"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center" Margin="0,277,-1,0"
                BorderBrush="Black"
               
                 />


        </Grid>
    </Viewbox>
</Window>