<Window
    x:Class="senior_project.Tester"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:senior_project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tester"
    Width="800"
    Height="600"
    Closed="Window_Closed"
    ContentRendered="Window_ContentRendered"
    Icon="icons\splashscreen.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ContextMenu x:Key="contextMenu">
            <MenuItem Click="Exit_Button" Header="Exit" />
        </ContextMenu>

        <XmlDataProvider x:Key="xmlData" XPath="/Procedure/Procedure_Sections/Section" />

        <HierarchicalDataTemplate DataType="Procedure_Sections" ItemsSource="{Binding XPath=Section}">
            <TextBlock Text="{Binding XPath=Procedure_Sections}" />
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="Section" ItemsSource="{Binding XPath=Section_Step}">
            <TextBlock Text="{Binding XPath=Heading}" />
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="Section_Step">
            <TextBlock Text="{Binding XPath=@id}" />
        </HierarchicalDataTemplate>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Click="mnuSave_Click" Header="_Save" />
                <Separator />
                <MenuItem Click="Exit_Button" Header="_Exit" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="lblProcedurePosition" />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4">
                <ProgressBar
                    Name="pbProcedureProgress"
                    Width="90"
                    Height="16"
                    Value="0" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <DockPanel
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Stretch">
                <TreeView
                    x:Name="treeView1"
                    VerticalAlignment="Stretch"
                    BorderBrush="Black"
                    BorderThickness="1"
                    IsEnabled="True"
                    ItemsSource="{Binding Source={StaticResource xmlData}, UpdateSourceTrigger=PropertyChanged}"
                    Opacity=".5"
                    SelectedItemChanged="TreeView1_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">

                            <EventSetter Event="Collapsed" Handler="TreeViewItem_Collapsed" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="IsExpanded" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding XPath=Pass}" Value="true">
                                    <Setter Property="Background" Value="Yellow" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding XPath=Fail}" Value="true">
                                    <Setter Property="Background" Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Name}" Value="Section">
                                    <Setter Property="IsSelected" Value="False" />
                                    <Setter Property="Focusable" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </DockPanel>
            <StackPanel Grid.Column="2">
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="DockPanel.Dock" Value="Top" />
                    </Style>
                </StackPanel.Resources>
                <DockPanel Margin="5">
                    <Label
                        x:Name="lblStep"
                        Height="30"
                        Background="#025dba"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Content="Step"
                        FontWeight="UltraBlack"
                        TextElement.Foreground="White" />
                    <TextBox
                        x:Name="tbStep"
                        Height="60"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        BorderBrush="Black"
                        DataContext="{Binding ElementName=treeView1, Path=SelectedItem}"
                        IsReadOnly="True"
                        Text="{Binding XPath=@id, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </DockPanel>
                <DockPanel Margin="5">
                    <Label
                        x:Name="lblStation"
                        Height="30"
                        VerticalAlignment="Top"
                        Background="#025dba"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Content="Station"
                        FontWeight="UltraBlack"
                        TextElement.Foreground="White" />
                    <TextBox
                        x:Name="tbStation"
                        Height="60"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        BorderBrush="Black"
                        DataContext="{Binding ElementName=treeView1, Path=SelectedItem}"
                        IsReadOnly="True"
                        Text="{Binding XPath=Station, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </DockPanel>
                <DockPanel Margin="5">
                    <Label
                        x:Name="lblControlAction"
                        Grid.Column="2"
                        Height="30"
                        VerticalAlignment="Top"
                        Background="#025dba"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Content="Control Action"
                        FontWeight="UltraBlack"
                        TextElement.Foreground="White" />
                    <TextBox
                        x:Name="tbControlAction"
                        Height="60"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        BorderBrush="Black"
                        DataContext="{Binding ElementName=treeView1, Path=SelectedItem}"
                        IsReadOnly="True"
                        Text="{Binding XPath=Control_Action, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </DockPanel>
                <DockPanel Margin="5">
                    <Label
                        x:Name="lblExpectedResult"
                        Height="30"
                        Background="#025dba"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Content="Expected Result"
                        FontWeight="UltraBlack"
                        TextElement.Foreground="White" />
                    <TextBox
                        x:Name="tbExpectedResult"
                        Height="60"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        BorderBrush="Black"
                        DataContext="{Binding ElementName=treeView1, Path=SelectedItem}"
                        IsReadOnly="True"
                        Text="{Binding XPath=Expected_Result, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </DockPanel>

                <DockPanel
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    DockPanel.Dock="Bottom">
                    <Button
                        x:Name="commentButton"
                        Width="65"
                        Height="45"
                        Click="CommentButton_Click"
                        DockPanel.Dock="Right"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        ToolTip="Leave a comment">
                        <Image Source="icons\comments-512.png" />
                    </Button>
                    <Button
                        x:Name="redlineButton"
                        Width="67"
                        Height="45"
                        Click="RedlineButton_Click"
                        DockPanel.Dock="Right"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        ToolTip="Leave a redline suggestion">
                        <Image Source="icons\edit-6-512.png" />
                    </Button>
                    <Button
                        x:Name="failButton"
                        Width="46"
                        Height="45"
                        Click="FailButton_Click"
                        DockPanel.Dock="Right"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        ToolTip="Press to fail step and leave comment">
                        <Image Source="icons\x-mark-5-512.png" />
                    </Button>
                    <Button
                        x:Name="passButton"
                        Width="45"
                        Height="45"
                        Click="PassButton_Click"
                        DockPanel.Dock="Right"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        ToolTip="Press to pass step">
                        <Image Source="icons\checked-checkbox-512.png" />
                    </Button>
                    <TextBlock
                        x:Name="timer"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontFamily="Comic Sans MS"
                        FontSize="20"
                        FontWeight="UltraBlack"
                        TextAlignment="Center" />
                </DockPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>