        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="383*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Station" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="41,57,31,0" Height="46" Width="175" FontSize="20" HorizontalContentAlignment="Center" FontWeight="Bold" Background="LightGray" BorderThickness="2" BorderBrush="Black" Grid.ColumnSpan="3"/>
        <TextBox x:Name="ExpResultBox" HorizontalAlignment="Left" Height="75" TextWrapping="Wrap" VerticalAlignment="Top" Width="312" Margin="23,30,0,0" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2"  GotFocus="ExpResultBox_GotFocus"/>
