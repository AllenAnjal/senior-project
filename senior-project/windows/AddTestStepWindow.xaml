        <Label Content="Control Action" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="41,0,31,0" Height="46" Width="175" FontSize="20" HorizontalContentAlignment="Center" FontWeight="Bold" Background="LightGray" BorderThickness="2" BorderBrush="Black" Grid.ColumnSpan="3" Grid.Row="1"/>
