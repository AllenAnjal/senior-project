<Window
    x:Class="senior_project.TestAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:senior_project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TestAdmin"
  Width="800"
    Height="600"
    Closed="Window_Closed"
    Icon="icons\splashscreen.png"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ContextMenu x:Key="contextMenu">
            <MenuItem Click="Exit_Button" Header="Exit" />
        </ContextMenu>

        <XmlDataProvider x:Key="xmlData" XPath="/TestProcedure/Sections/Section" />

        <HierarchicalDataTemplate DataType="Sections" ItemsSource="{Binding XPath=Section}">
            <TextBlock Text="{Binding XPath=Sections}" />
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="Section" ItemsSource="{Binding XPath=Test_Step}">
            <TextBlock Text="{Binding XPath=Heading}" />
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="Test_Step">
            <TextBlock Text="{Binding XPath=@id}" />
        </HierarchicalDataTemplate>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Click="mnuSave_Click" Header="_Save" />
                <Separator />
                <MenuItem Click="Exit_Button" Header="_Exit" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="lblProcedurePosition" />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4">
                <ProgressBar
                    Name="pbProcedureProgress"
                    Width="90"
                    Height="16"
                    Value="0" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <DockPanel
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Stretch">
                <TreeView
                    x:Name="treeView1"
                    VerticalAlignment="Stretch"
                    BorderBrush="Black"
                    BorderThickness="1"
                    IsEnabled="True"
                    ItemsSource="{Binding Source={StaticResource xmlData}, UpdateSourceTrigger=PropertyChanged}"
                    Opacity=".5"
                    SelectedItemChanged="TreeView1_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <EventSetter Event="PreviewMouseDoubleClick" Handler="TreeView1_PreviewMouseLeftButtonUp_1" />
                            <Setter Property="Foreground" Value="Black" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding XPath=Pass}" Value="true">
                                    <Setter Property="Background" Value="Yellow" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding XPath=Fail}" Value="true">
                                    <Setter Property="Background" Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Name}" Value="Section">
                                    <Setter Property="IsSelected" Value="False" />
                                    <Setter Property="Focusable" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.Resources>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center" Text="{Binding}"/>
                                            <StackPanel Orientation="Vertical">
                                                <Button x:Name="Move_Up_Btn">
                                                    Up
                                                </Button>
                                                <Button x:Name="Move_Down_Btn">
                                                    Down
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TreeView.Resources>
                </TreeView>
            </DockPanel>
            <StackPanel Grid.Column="2">
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="DockPanel.Dock" Value="Top" />
                    </Style>
                </StackPanel.Resources>
                <Border Name="borderStep" BorderThickness="1" BorderBrush="Black" CornerRadius="7" Padding="0"
        HorizontalAlignment="Center" VerticalAlignment="Top" Width="534" Height="100" Background="#025dba" DockPanel.Dock="Top">
                    <DockPanel Margin="5" >
                        <Label
                         
                        x:Name="lblStep"
                        Height="30"
                        VerticalAlignment="Top"
                        Background="#025dba"
                        BorderThickness="1"
                        Content="Step"
                        FontFamily="Comic Sans MS"
                        FontWeight="UltraBlack"
                        TextElement.Foreground="White" />
                        <Border BorderBrush="Black" BorderThickness="1" Height="60" Width="520" CornerRadius="3" HorizontalAlignment="Center" Background="White">
                            <TextBox
                        x:Name="tbStep"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        BorderBrush="white"
                        
                        DataContext="{Binding SelectedItem, ElementName=treeView1}"
                        IsReadOnly="True"
                        Text="{Binding UpdateSourceTrigger=PropertyChanged, XPath=@id}"
                        TextWrapping="Wrap" Margin="1" />
                        </Border>

                    </DockPanel>
                </Border>
                <Border Name="borderStation" BorderThickness="1" BorderBrush="Black" CornerRadius="7" Padding="0"
                    HorizontalAlignment="Center" VerticalAlignment="Top" Width="534"  Background="#025dba" DockPanel.Dock="Top">

                    <DockPanel Margin="5">
                        <Label
                        x:Name="lblStation"
                        Height="30"
                        VerticalAlignment="Top"
                        Background="#025dba"
                        
                        BorderThickness="1"
                        Content="Station"
                        FontFamily="Comic Sans MS"
                        FontWeight="UltraBlack"
                        TextElement.Foreground="White" />
                        <Border BorderBrush="Black" BorderThickness="1" Height="60" Width="520" CornerRadius="3" HorizontalAlignment="Center" Background="White">
                            <TextBox
                            x:Name="tbStation"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            BorderBrush="White"
                            DataContext="{Binding ElementName=treeView1, Path=SelectedItem}"
                            IsReadOnly="True"
                            Text="{Binding XPath=Station, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap" Margin="1" />
                        </Border>
                    </DockPanel>
                </Border>
                <Border Name="borderControl" BorderThickness="1" BorderBrush="Black" CornerRadius="7" Padding="0"
                    HorizontalAlignment="Center" VerticalAlignment="Top" Width="534"  Background="#025dba" DockPanel.Dock="Top">
                    <DockPanel Margin="5">
                        <Label
                        x:Name="lblControlAction"
                        Grid.Column="2"
                        Height="30"
                        VerticalAlignment="Top"
                        Background="#025dba"
                      
                        BorderThickness="1"
                        Content="Control Action"
                        FontWeight="UltraBlack"
                        TextElement.Foreground="White" />
                        <Border BorderBrush="Black" BorderThickness="1" Height="60" Width="520" CornerRadius="3" HorizontalAlignment="Center" Background="White">
                            <TextBox
                            x:Name="tbControlAction"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            BorderBrush="White"
                            DataContext="{Binding ElementName=treeView1, Path=SelectedItem}"
                            IsReadOnly="True"
                            Text="{Binding XPath=Control_Action, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap" Margin="1" />
                        </Border>
                    </DockPanel>
                </Border>
                <Border Name="borderExp" BorderThickness="1" BorderBrush="Black" CornerRadius="7" Padding="0"
                    HorizontalAlignment="Center" VerticalAlignment="Top" Width="534"  Background="#025dba" DockPanel.Dock="Top">
                    <DockPanel Margin="5">
                        <Label
                        x:Name="lblExpectedResult"
                        Height="30"
                        Background="#025dba"
                        
                        BorderThickness="1"
                        Content="Expected Result"
                        FontWeight="UltraBlack"
                        TextElement.Foreground="White" />
                        <Border BorderBrush="Black" BorderThickness="1" Height="60" Width="520" CornerRadius="3" HorizontalAlignment="Center" Background="White">
                            <TextBox
                        x:Name="tbExpectedResult"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        BorderBrush="White"
                        DataContext="{Binding ElementName=treeView1, Path=SelectedItem}"
                        IsReadOnly="True"
                        Text="{Binding XPath=Expected_Result, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" Margin="1,1,1,2" />
                        </Border>
                    </DockPanel>
                </Border>
                <DockPanel
                    Margin="0,40,50,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    >
                    <Border BorderBrush="Black" 
                        CornerRadius="10" 
                        BorderThickness="1" 
                        Background="#024DBA"
                        Width="145"
                        Height="45"
                        DockPanel.Dock="Right"
                        Margin="0,0,0,0">
                        <Button
                            x:Name="removeStepButton"
						    Content="Remove Procedural Step"
						    Foreground="White"
                            Click="removeStepButton_Click"
                            DockPanel.Dock="Right"
                            Background="#024DBA"
                            BorderBrush="#024DBA"
                            ToolTip="Remove the current step" Margin="3,2,2,3"/>
                    </Border>
                    <Border BorderBrush="Black" 
                        CornerRadius="10" 
                        BorderThickness="1" 
                            
                        Background="#024DBA"
                        Width="145"
                        Height="45"
                            
                        Margin="0,0,0,0">
                        <Button
                            x:Name="addStepButton1"
                            BorderBrush="#024DBA"
                            Content="Add Procedural Step"
                            Foreground="White"
						
                            Click="addStepButton_Click"
                            DockPanel.Dock="Right"
                            Background="#024DBA"
                            ToolTip="Add a new step below the current one" RenderTransformOrigin="0.977,0.659" Margin="4,2,3,2"/>
                    </Border>
                </DockPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>