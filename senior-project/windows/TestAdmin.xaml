<Window
    x:Class="senior_project.TestAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:senior_project"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TestAdmin"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center"
    Background="#FF858181"
    Closed="Window_Closed"
    Icon="../images/splashscreen.png"
    SizeToContent="Width"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Click="MenuItem_Click" Header="Exit" />
        </ContextMenu>
    </Window.ContextMenu>
    <Viewbox Width="Auto" Height="Auto">
        <Grid Width="Auto" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="204*" />
                <ColumnDefinition Width="589*" />
            </Grid.ColumnDefinitions>
            <TreeView
                x:Name="treeView1"
                Height="339"
                Margin="10,0,10,83"
                VerticalAlignment="Bottom"
                Background="White"
                SelectedItemChanged="TreeView1_SelectedItemChanged" />
            <Expander
                Width="Auto"
                Height="Auto"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ExpandDirection="Down"
                Header="Menu">
                <Grid Margin="0,0,126,0" Background="LightSlateGray">
                    <Button
                        x:Name="saveXmlButton"
                        Margin="0,0,0,-2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FF9B9898"
                        Click="SaveXmlButton_Click"
                        Content="Save XML" />
                </Grid>
            </Expander>
            <Button
                x:Name="btn_add_section"
                Grid.Column="1"
                Width="124"
                Height="47"
                Margin="10,393,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                Click="Btn_add_section_Click"
                Content="Add New Section"
                FontSize="14"
                FontWeight="Bold" />
            <Button
                x:Name="btn_remove_section"
                Grid.Column="1"
                Width="124"
                Height="47"
                Margin="165,393,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                Click="Btn_remove_section_Click"
                Content="Remove Section"
                FontSize="14"
                FontWeight="Bold" />
            <Button
                x:Name="btn_add_step"
                Grid.Column="1"
                Width="124"
                Height="47"
                Margin="310,393,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                Click="Btn_add_step_Click"
                Content="Add New Step"
                FontSize="14"
                FontWeight="Bold" />
            <Button
                x:Name="btn_remove_step"
                Grid.Column="1"
                Width="124"
                Height="47"
                Margin="460,393,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                Click="Btn_remove_step_Click"
                Content="Remove Step"
                FontSize="14"
                FontWeight="Bold" />

            <Grid
                Grid.Column="1"
                Margin="58,83,27,83"
                Background="LightGray"
                ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" MinWidth="64" />
                    <ColumnDefinition Width="auto" MinWidth="94" />
                    <ColumnDefinition Width="auto" MinWidth="177" />
                    <ColumnDefinition Width="auto" MinWidth="144" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="111" />
                    <RowDefinition Height="auto" MinHeight="21" />
                </Grid.RowDefinitions>

                <Rectangle
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,-1,2,0"
                    Fill="Transparent"
                    Stroke="Black" />
                <Rectangle
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="66,-1,0,0"
                    Fill="Transparent"
                    Stroke="Black" />
                <Rectangle
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="0,-1,0,0"
                    Fill="Transparent"
                    Stroke="Black" />
                <Rectangle
                    Grid.Row="0"
                    Grid.Column="3"
                    Height="112"
                    Margin="0,-1,0,0"
                    VerticalAlignment="Bottom"
                    Fill="Transparent"
                    Stroke="Black" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="65"
                    Height="26"
                    Margin="2,0,1,85"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Step" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="94"
                    Height="27"
                    Margin="1,0,0,85"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Station" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="174"
                    Height="26"
                    Margin="5,0,0,85"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Control Action" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    Width="156"
                    Height="24"
                    Margin="5,-1,7,88"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Expected Result" />

                <TextBox
                    x:Name="stepBox"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Width="66"
                    Height="173"
                    Margin="0,0,0,-1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="Black"
                    BorderThickness="1"
                    KeyDown="StepBox_KeyDown"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="stationBox"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Width="97"
                    Height="172"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    BorderBrush="Black"
                    BorderThickness="1"
                    KeyDown="StationBox_KeyDown"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="controlActionBox"
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="179"
                    Height="172"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="Black"
                    BorderThickness="1"
                    KeyDown="ControlActionBox_KeyDown"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="expectedResultBox"
                    Grid.Row="1"
                    Grid.Column="3"
                    Width="168"
                    Height="172"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="Black"
                    BorderThickness="1"
                    KeyDown="ExpectedResultBox_KeyDown"
                    TextWrapping="Wrap" />
            </Grid>
            <Button
                x:Name="btn_add_section_Copy"
                Width="135"
                Height="47"
                Margin="0,393,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                Click="Move_section_Click"
                Content="Move Section/Step"
                FontSize="14"
                FontWeight="Bold"
                RenderTransformOrigin="0.454,0.48" />
            <Label
                Grid.Column="1"
                Width="324"
                Height="41"
                Margin="149,25,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Test Procedure Editor"
                FontSize="28"
                FontWeight="ExtraBold" />
            <Expander
                Grid.Column="1"
                Width="222"
                Height="100"
                Margin="0,0,372,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Header="Heading and Description"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                Visibility="Hidden">
                <Grid
                    Height="398"
                    Margin="0,0,0,0"
                    Background="LightSlateGray">
                    <Button
                        x:Name="EditHeading"
                        Width="220"
                        Height="38"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FF9B9898"
                        Click="EditHeading_Click"
                        Content="Edit Heading" />
                    <Button
                        x:Name="EditDescription"
                        Width="220"
                        Height="39"
                        Margin="0,37,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FF9B9898"
                        Click="EditDescription_Click"
                        Content="Edit Description" />
                </Grid>
            </Expander>
        </Grid>
    </Viewbox>
</Window>