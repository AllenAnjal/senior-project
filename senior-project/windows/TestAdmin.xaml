<Window
    x:Class="senior_project.TestAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:senior_project"
    mc:Ignorable="d"
    Title="TestAdmin"
    Background="#FF858181"
    WindowStartupLocation="CenterScreen"
    Closed="Window_Closed"
    Icon="../images/splashscreen.png"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center"
    SizeToContent="Width">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem
                Header="Exit"
                Click="MenuItem_Click" />
        </ContextMenu>
    </Window.ContextMenu>
    <Viewbox
        Width="Auto"
        Height="Auto">
        <Grid
            Height="Auto"
            Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="204*" />
                <ColumnDefinition
                    Width="589*" />
            </Grid.ColumnDefinitions>
            <TreeView
                x:Name="treeView1"
                Background="White"
                Margin="10,0,10,83"
                Height="339"
                VerticalAlignment="Bottom"
                SelectedItemChanged="TreeView1_SelectedItemChanged" />
            <Expander
                Header="Menu"
                ExpandDirection="Down"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="Auto"
                Height="Auto">
                <Grid
                    Background="LightSlateGray"
                    Margin="0,0,126,0">
                    <Button
                        x:Name="saveXmlButton"
                        Content="Save XML"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="SaveXmlButton_Click"
                        Background="#FF9B9898"
                        Margin="0,0,0,-2" />

                </Grid>
            </Expander>
            <Button
                x:Name="btn_add_section"
                Content="Add New Section"
                HorizontalAlignment="Left"
                Margin="10,393,0,0"
                VerticalAlignment="Top"
                Width="124"
                Height="47"
                Background="White"
                Click="Btn_add_section_Click"
                FontWeight="Bold"
                FontSize="14"
                Grid.Column="1" />
            <Button
                x:Name="btn_remove_section"
                Content="Remove Section"
                HorizontalAlignment="Left"
                Margin="165,393,0,0"
                VerticalAlignment="Top"
                Width="124"
                Height="47"
                Background="White"
                Click="Btn_remove_section_Click"
                FontWeight="Bold"
                FontSize="14"
                Grid.Column="1" />
            <Button
                x:Name="btn_add_step"
                Content="Add New Step"
                HorizontalAlignment="Left"
                Margin="310,393,0,0"
                VerticalAlignment="Top"
                Width="124"
                Height="47"
                Background="White"
                Click="Btn_add_step_Click"
                FontWeight="Bold"
                FontSize="14"
                Grid.Column="1" />
            <Button
                x:Name="btn_remove_step"
                Content="Remove Step"
                HorizontalAlignment="Left"
                Margin="460,393,0,0"
                VerticalAlignment="Top"
                Width="124"
                Height="47"
                Background="White"
                Click="Btn_remove_step_Click"
                FontWeight="Bold"
                FontSize="14"
                Grid.Column="1" />

            <Grid
                ShowGridLines="False"
                Background="LightGray"
                Grid.Column="1"
                Margin="58,83,27,83">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto"
                        MinWidth="64" />
                    <ColumnDefinition
                        Width="auto"
                        MinWidth="94" />
                    <ColumnDefinition
                        Width="auto"
                        MinWidth="177" />
                    <ColumnDefinition
                        Width="auto"
                        MinWidth="144" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="111" />
                    <RowDefinition
                        Height="auto"
                        MinHeight="21" />
                </Grid.RowDefinitions>

                <Rectangle
                    Grid.Column="0"
                    Grid.Row="0"
                    Stroke="Black"
                    Fill="Transparent"
                    Margin="0,-1,2,0" />
                <Rectangle
                    Grid.Row="0"
                    Stroke="Black"
                    Fill="Transparent"
                    Margin="66,-1,0,0"
                    Grid.ColumnSpan="2" />
                <Rectangle
                    Grid.Column="2"
                    Grid.Row="0"
                    Stroke="Black"
                    Fill="Transparent"
                    Margin="0,-1,0,0" />
                <Rectangle
                    Grid.Column="3"
                    Grid.Row="0"
                    Stroke="Black"
                    Fill="Transparent"
                    Height="112"
                    VerticalAlignment="Bottom"
                    Margin="0,-1,0,0" />
                <TextBlock
                    Text="Step"
                    Grid.Row="0"
                    Grid.Column="0"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Height="26"
                    Margin="2,0,1,85"
                    Width="65" />
                <TextBlock
                    Text="Station"
                    Grid.Row="0"
                    Grid.Column="1"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Height="27"
                    Margin="1,0,0,85"
                    Width="94" />
                <TextBlock
                    Text="Control Action"
                    Grid.Row="0"
                    Grid.Column="2"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Height="26"
                    Margin="5,0,0,85"
                    Width="174" />
                <TextBlock
                    Text="Expected Result"
                    Grid.Row="0"
                    Grid.Column="3"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Height="24"
                    Margin="5,-1,7,88"
                    Width="156" />

                <TextBox
                    x:Name="stepBox"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    VerticalAlignment="Top"
                    Height="173"
                    Width="66"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Margin="0,0,0,-1"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    KeyDown="StepBox_KeyDown" />
                <TextBox
                    x:Name="stationBox"
                    HorizontalAlignment="Right"
                    TextWrapping="Wrap"
                    VerticalAlignment="Top"
                    Height="172"
                    Width="97"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    KeyDown="StationBox_KeyDown" />
                <TextBox
                    x:Name="controlActionBox"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    VerticalAlignment="Top"
                    Height="172"
                    Width="179"
                    Grid.Column="2"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.Row="1"
                    KeyDown="ControlActionBox_KeyDown" />
                <TextBox
                    x:Name="expectedResultBox"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    VerticalAlignment="Top"
                    Height="172"
                    Width="168"
                    Grid.Column="3"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.Row="1"
                    KeyDown="ExpectedResultBox_KeyDown" />

            </Grid>
            <Button
                x:Name="btn_add_section_Copy"
                Content="Move Section/Step"
                HorizontalAlignment="Left"
                Margin="0,393,0,0"
                VerticalAlignment="Top"
                Width="135"
                Height="47"
                Background="White"
                Click="Move_section_Click"
                FontWeight="Bold"
                FontSize="14"
                RenderTransformOrigin="0.454,0.48" />
            <Label
                Content="Test Procedure Editor"
                FontSize="28"
                FontWeight="ExtraBold"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Height="41"
                Margin="149,25,0,0"
                VerticalAlignment="Top"
                Width="324" />
            <Expander
                Header="Heading and Description"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Width="222"
                Grid.Column="1"
                Margin="0,0,372,0"
                Height="100"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                Visibility="Hidden">
                <Grid
                    Background="LightSlateGray"
                    Height="398"
                    Margin="0,0,0,0">
                    <Button
                        x:Name="EditHeading"
                        Content="Edit Heading"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="220"
                        Height="38"
                        Click="EditHeading_Click"
                        Background="#FF9B9898" />
                    <Button
                        x:Name="EditDescription"
                        Content="Edit Description"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="220"
                        Height="39"
                        Margin="0,37,0,0"
                        Click="EditDescription_Click"
                        Background="#FF9B9898" />
                </Grid>
            </Expander>

        </Grid>

    </Viewbox>
</Window>
