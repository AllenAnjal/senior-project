<?xml version="1.0" encoding="utf-8"?>

<xs:schema id="procedureSchema"
    targetNamespace="http://tempuri.org/ProcedureSchema.xsd"
    elementFormDefault="qualified"
    xmlns="http://tempuri.org/ProcedureSchema.xsd"
    xmlns:mstns="http://tempuri.org/ProcedureSchema.xsd"
    xmlns:msdata="urn:schemas-microsoft-com:xml-msdata"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
  
  <xs:element name="Procedure">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Procedure_Heading" msdata:Ordinal="0">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Name" type="xs:string"/>
              <xs:element name="Signature" type="xs:string"/>
              <xs:element name="Organization" type="xs:string"/>
              <xs:element name="Date" type="xs:string"/>
              <xs:element name="Time" type="xs:string"/>
              <xs:element name="Load_Version" type="xs:string"/>
              <xs:element name="Description" type="xs:string"/>
              <xs:element name="System" type="xs:string"/>
              <xs:element name="Severity" type="xs:string"/>
              <xs:element name="Revision" type="xs:unsignedShort" default="1"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="Procedure_Sections" msdata:Ordinal="1">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Section" maxOccurs="unbounded" minOccurs="1">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="Heading" type="xs:string"/>
                    <xs:element name="Description" type="xs:string"/>
                    <xs:element name="Section_Step" maxOccurs="unbounded" minOccurs="1">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="Station" type="xs:string"/>
                          <xs:element name="Control_Action" type="xs:string"/>
                          <xs:element name="Expected_Result" type="xs:string"/>
                          <xs:element name="Pass" default="false"/>
                          <xs:element name="Fail" default="false"/>
                          <xs:element name="Comments" type="xs:string"/>
                          <xs:element name="Image" minOccurs="0"/>
                        </xs:sequence>
                        <xs:attribute name="id" type="xs:unsignedShort" use="required"/>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                  <xs:attribute name="id" type="xs:unsignedShort" use="required"/>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>  
        </xs:element>
        <xs:element name="Procedure_Redlines" maxOccurs="unbounded" msdata:Ordinal="2">
          <xs:complexType>
            <xs:sequence>
              <xs:any maxOccurs="unbounded" minOccurs="0"></xs:any>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
      
</xs:schema>

